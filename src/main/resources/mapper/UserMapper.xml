<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.student_serve.mapper.UserMapper">

    <resultMap id="BaseResultMap" type="com.student_serve.model.entity.User">
            <id property="id" column="id" jdbcType="BIGINT"/>
            <result property="userAccount" column="userAccount" jdbcType="VARCHAR"/>
            <result property="userName" column="userName" jdbcType="VARCHAR"/>
            <result property="userPassword" column="userPassword" jdbcType="VARCHAR"/>
            <result property="cardId" column="cardId" jdbcType="VARCHAR"/>
            <result property="userRole" column="userRole" jdbcType="VARCHAR"/>
            <result property="phone" column="phone" jdbcType="VARCHAR"/>
            <result property="department" column="department" jdbcType="VARCHAR"/>
            <result property="classes" column="classes" jdbcType="VARCHAR"/>
            <result property="job" column="job" jdbcType="VARCHAR"/>
            <result property="duty" column="duty" jdbcType="VARCHAR"/>
            <result property="unity" column="unity" jdbcType="VARCHAR"/>
            <result property="updateTime" column="updateTime" jdbcType="TIMESTAMP"/>
    </resultMap>

    <sql id="Base_Column_List">
        id,userAccount,userName,
        userPassword,cardId,userRole,
        phone,department,classes,
        job,duty,unity,
        updateTime
    </sql>

    <select id="queryUserArchive" parameterType="com.student_serve.model.entity.User"
            resultType="com.student_serve.model.vo.UserArchiveVO">
        select u.*, a.archiveId,a.sex,a.health,a.address,a.origin,a.nation,a.createTime from user u left join archive a
        on u.userAccount = a.sid
        <where>
            <if test="user.userAccount != null and user.userAccount != ''">
                u.userAccount like concat('%', #{user.userAccount},'%')
            </if>
            <if test="user.cardId != null and user.cardId != ''">
                and u.cardId like concat('%', #{user.cardId}, '%')
            </if>
            <if test="user.phone != null and user.phone != ''">
                and u.phone like concat('%',#{user.phone},'%')
            </if>
            <if test="user.classes != null and user.classes != ''">
                and u.classes like concat('%', #{user.classes}, '%')
            </if>
            <if test="user.userRole != null and user.userRole != ''">
                and u.userRole = #{user.userRole}
            </if>
        </where>
    </select>
</mapper>
